<config>
    <modules>
        <Quafzi_CustomerTypes>
            <version>0.1.0</version>
        </Quafzi_CustomerTypes>
    </modules>
    <global>
        <blocks>
            <customertypes>
                <class>Quafzi_CustomerTypes_Block</class>
            </customertypes>
            <adminhtml>
                <rewrite>
                    <!-- overwrite Mage_Adminhtml_Block_Customer_Grid to add type to grid -->
                    <customer_grid>Quafzi_CustomerTypes_Block_Adminhtml_Customer_Grid</customer_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <customertypes>
                <class>Quafzi_CustomerTypes_Helper</class>
            </customertypes>
        </helpers>
        <models>
            <customertypes>
                <class>Quafzi_CustomerTypes_Model</class>
            </customertypes>
        </models>
        <resources>
            <customertypes_setup>
                <setup>
                    <module>Quafzi_CustomerTypes</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customertypes_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <customertypes>
                <use>admin</use>
                <args>
                    <module>Quafzi_CustomerTypes</module>
                    <frontName>customertypes</frontName>
                </args>
            </customertypes>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Quafzi_CustomerTypes>
                    <files>
                        <default>Quafzi_CustomerTypes.csv</default>
                    </files>
                </Quafzi_CustomerTypes>
            </modules>
        </translate>
    </adminhtml>
</config>
